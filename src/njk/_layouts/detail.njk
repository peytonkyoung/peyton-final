{% extends '_layouts/base.njk' %}

{% block content %}

<article class="container">

  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block info %}
        <img src="../img/members/{{ member.image }}" alt="{{member.slug}}" class="img-fluid">

        <p class="bio">
        Instruments: {{member.instruments}}<br>
        Tenure: {{member.tenure}}<br>
        Birthdate: {{member.birthdate}}<br>
        Birthplace: {{member.birthplace}}<br>
        </p>

      {% endblock %}
    </div>
  
    <div class="col-sm-8">
      {% block story %}
        <h1>{{member.name}}</h1>
        {{member.text}}

      {% endblock %}

    </div>
  </div>
</article>

{% endblock %}
